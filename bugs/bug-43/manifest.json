{
  "apiVersion": "v1",
  "kind": "Pod",
  "metadata": {
    "name": "nginx"
  },
  "spec": {
    "automountServiceAccountToken": true,
    "nodeSelector": {
      "kubernetes.io/hostname": "<node>"
    },
    "volumes": [
      {
        "name": "test",
        "hostPath": {
          "path": "/tmp/test"
        }
      }
    ],
    "containers": [
      {
        "name": "nginx",
        "image": "nginx:1.14.2",
        "volumeMounts": [
          {
            "name": "test",
            "mountPath": "/test"
          }
        ],
        "ports": [
          {
            "containerPort": 80
          }
        ]
      }
    ]
  }
}
