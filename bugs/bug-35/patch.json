{
  "apiVersion": "v1",
  "kind": "Pod",
  "metadata": {
    "generateName": "example-no-affinity-"
  },
  "spec": {
    "affinity": {
      "nodeAffinity": {
        "requiredDuringSchedulingIgnoredDuringExecution": {
          "nodeSelectorTerms": [
            {
              "matchExpressions": [
                {
                  "key": "expr",
                  "operator": "In",
                  "values": [
                    "value"
                  ]
                }
              ]
            }
          ]
        }
      }
    },
    "containers": [
      {
        "name": "example-container",
        "image": "quay.io/openshifttest/hello-openshift:1.2.0"
      }
    ]
  }
}
