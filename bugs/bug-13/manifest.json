{
  "apiVersion": "apiextensions.k8s.io/v1beta1",
  "kind": "CustomResourceDefinition",
  "metadata": {
    "name": "myapps"
  },
  "spec": {
    "group": "myapp.com",
    "version": "v1alpha1",
    "scope": "Namespaced",
    "names": {
      "plural": "myapps",
      "singular": "myapp",
      "kind": "MyApp"
    },
    "validation": {
      "openAPIV3Schema": {
        "type": "object",
        "properties": {
          "spec": {
            "type": "object",
            "required": [
              "replicas"
            ],
            "properties": {
              "replicas": {
                "type": "integer",
                "minimum": 1
              },
              "image": {
                "type": "string"
              }
            }
          }
        }
      }
    },
    "finalizers": []
  }
}