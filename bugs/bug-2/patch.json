{
  "apiVersion": "apps/v1",
  "kind": "Deployment",
  "metadata": {
    "name": "bash"
  },
  "spec": {
    "replicas": 1,
    "selector": {
      "matchLabels": {
        "app": "bash"
      }
    },
    "template": {
      "metadata": {
        "labels": {
          "app": "bash"
        }
      }, "spec": {
        "containers": [
          {
            "name": "bash",
            "image": "ubuntu:latest",
            "command": ["tail", "-f", "/dev/null"]
          }
        ]
      }
    }
  }
}