{
  "apiVersion": "apps/v1",
  "kind": "DaemonSet",
  "metadata": {
    "name": "nginx-daemonset"
  },
  "spec": {
    "selector": {
      "matchLabels": {
        "name": "nginx"
      }
    },
    "template": {
      "metadata": {
        "labels": {
          "name": "nginx"
        }
      },
      "spec": {
        "containers": [
          {
            "name": "nginx",
            "image": "nginx:latest",
            "ports": [
              {
                "containerPort": 80
              }
            ]
          }
        ]
      }
    },
    "updateStrategy": {
      "rollingUpdate": {
        "maxSurge": 2,
        "maxUnavailable": 0
      }
    }
  }
}
